@model EditFieldViewModel

<input class="form-control"
       type="number"
       name="@Model.Name"
       value="@Model.Value"
       hx-post
       hx-controller="Calculator"
       hx-action="CalculateRow"
       hx-trigger="blur, keyup[key=='Enter']"
       hx-target="closest tr"
       hx-swap="outerHTML"
       hx-include="closest tr"
       autofocus />
