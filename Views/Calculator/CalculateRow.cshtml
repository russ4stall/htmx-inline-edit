@model CalculateRowViewModel 
<tr>
    <td>
        <input asp-for="StaticValueOne" readonly class="form-control-plaintext" />
    </td>
    <td>
        <input asp-for="StaticValueTwo" readonly class="form-control-plaintext" />
    </td>
    <td>
        <input readonly
               class="form-control"
               asp-for="ValueOne"
               hx-get
               hx-controller="Calculator"
               hx-action="EditField"
               hx-route-name="@nameof(Model.ValueOne)"
               hx-route-value="@Model.ValueOne"
               hx-trigger="click once"
               hx-target="closest td" />
    </td>
    <td>
        <input readonly
               class="form-control"
               asp-for="ValueTwo"
               hx-get
               hx-controller="Calculator"
               hx-action="EditField"
               hx-route-name="@nameof(Model.ValueTwo)"
               hx-route-value="@Model.ValueTwo"
               hx-trigger="click once"
               hx-target="closest td" />
    </td>
    <td>
        <input readonly
               class="form-control"
               asp-for="ValueThree"
               hx-get
               hx-controller="Calculator"
               hx-action="EditField"
               hx-route-name="@nameof(Model.ValueThree)"
               hx-route-value="@Model.ValueThree"
               hx-trigger="click once"
               hx-target="closest td" />
    </td>
    <td>
        <input asp-for="Total" readonly class="form-control-plaintext" />
    </td>
</tr>